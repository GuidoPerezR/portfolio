---
import ContactLink from '@/components/ContactLink.astro';
import PageContainer from '@/components/PageContainer.astro';
import { CONTACT_LINKS } from '@/const/ContactLinks';
import Layout from '@/layouts/Layout.astro';

const pageInfo = {
  title: 'Contacto',
  id: 'contact',
};
---

<Layout>
  <PageContainer {...pageInfo}>
    <div class="mt-12 flex flex-1 items-center">
      <div class="pl-8">
        <ul class="flex flex-col gap-8">
          {
            CONTACT_LINKS.map((link) => (
              <li class="flex flex-col gap-3.5 text-2xl">
                <ContactLink {...link} />
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </PageContainer>
</Layout>
