---
import { TECHNOLOGIES } from '@/const/Tecnologies';
import ExternalLink from '@/components/icons/ExternalLink.astro';
import Github from '@/components/icons/Github.astro';

const { id, title, image, long_desc, technologies, link, github } = Astro.props;
---

<div
  id={`project-detail-${id}`}
  class="project-detail hidden w-full max-w-4xl flex-col gap-4 pl-4 opacity-0 transition-opacity duration-300"
>
  <div class="">
    <h2 class="text-3xl font-bold text-white">{title}</h2>
    <div class="mt-6 h-80 w-full">
      <img src={image} alt={title} class="h-full w-full object-cover" />
    </div>
  </div>
  <div class="mt-4 flex flex-col items-end">
    <p class="max-w-xl text-right text-lg text-light-gray">{long_desc}</p>
    <div class="mt-4 flex gap-2">
      {
        technologies?.map((tech: string) => {
          const Icon = TECHNOLOGIES.find((e) => e.name === tech)?.icon;
          return (
            <span class="flex items-center gap-1.5 bg-white/10 px-3 py-1.5 text-white">
              {tech} {Icon && <Icon class="size-5" />}
            </span>
          );
        })
      }
    </div>
    <div class="mt-4 flex items-center gap-6">
      <a
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 text-lg text-light-gray transition-colors duration-300 hover:text-hover-nav"
        >{link}<ExternalLink class="size-4" /></a
      >
      <a
        href={github}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 text-lg text-light-gray transition-colors duration-300 hover:text-hover-nav"
        >Repositorio<Github class="size-6" /></a
      >
    </div>
  </div>
</div>
